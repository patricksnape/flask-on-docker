{% macro timeline_row(title, time, image_url="http://placehold.it/500x333", desc_align='right') -%}
    <div class="row story-row">
        <div class="story-image col-sm-12 col-md-5 {{ 'col-md-push-7' if desc_align == 'left' }} text-center">
            <!--PHOTO-ITEM-->
            <div class="photo-item animation delay1 fadeInLeft">

                <!--PHOTO-->
                <img src="{{ image_url }}" alt="">

            </div>
            <!--END of PHOTO-ITEM-->
        </div>

        <!-- Date -->
        <div class="col-sm-12 col-md-2 text-center story-date-wrapper animation fadeIn">
            <div class="arrow-left"></div>
            <div class="story-time">
                <div class="time-only">{{ time }}</div>
            </div>
            <div class="arrow-right"></div>
            <div class="clearboth"></div>
        </div>

        <!-- Text -->
        <div class="story-desc col-sm-12 col-md-5 {{ 'col-md-pull-7' if desc_align == 'left' }} animation delay1 fadeInRight">
            <h5>{{ title }}</h5>
            <p>
                {{ caller() }}
            </p>
        </div>

        <div class="vertical-line">
        </div>
    </div>
{%- endmacro %}
